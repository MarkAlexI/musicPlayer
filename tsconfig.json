{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "removeComments": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "sourceMap": true,
    "lib": ["dom"],
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/components*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ]
  },
  "strict": true,
  "files": [
    "./src/main.ts"
  ],
  "include": [
    "typings",
    "src/**/*.vue",
    "**/*.d.ts",
    "*.d.ts"
  ]
}